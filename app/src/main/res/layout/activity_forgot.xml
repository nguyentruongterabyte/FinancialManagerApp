<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activity.ForgotActivity">
    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/m_20"
        android:src="@drawable/ic_arrow_left"
        android:background="@color/white"
        android:importantForAccessibility="no"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/m_20"
        android:layout_marginEnd="@dimen/m_20"
        android:text="@string/find_your_account"
        android:textStyle="bold"
        android:textSize="@dimen/title_text_size"
        android:fontFamily="@font/akaya_telivigala"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/m_20"
        android:layout_marginEnd="@dimen/m_20"
        android:text="@string/enter_your_email_address"
        android:textSize="@dimen/description_text_size"
        android:fontFamily="@font/akaya_telivigala"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/m_20"
        android:layout_marginEnd="@dimen/m_20"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/email"
            android:textColorHint="@color/gray"
            android:fontFamily="@font/akaya_telivigala"
            android:textSize="@dimen/description_text_size"
            android:inputType="textEmailAddress"/>
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_continue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/edt_confirm_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/primary_button"
        android:layout_marginTop="@dimen/m_10"
        android:layout_marginStart="@dimen/m_20"
        android:layout_marginEnd="@dimen/m_20"
        android:text="@string/continue_"
        android:textSize="@dimen/button_text_size"
        android:textColor="@color/white"
        android:fontFamily="@font/akaya_telivigala"
        android:enabled="false"
        />
    <com.airbnb.lottie.LottieAnimationView
        android:visibility="gone"
        android:id="@+id/animationView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/loading" />
</LinearLayout>