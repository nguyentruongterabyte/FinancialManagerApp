<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.SearchActivity">

    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="10dp"
        android:minHeight="@dimen/action_bar_size"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="@dimen/m_10"
            android:background="@color/white"
            android:importantForAccessibility="no"
            android:padding="@dimen/m_10"
            android:src="@drawable/ic_arrow_left" />

        <EditText
            android:id="@+id/edt_search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/m_20"
            android:layout_weight="1"
            android:drawablePadding="@dimen/m_20"
            android:gravity="center_vertical"
            android:hint="@string/search"
            android:imeOptions="actionSearch"
            android:importantForAutofill="no"
            android:inputType="text"
            android:textStyle="bold" />
    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_marginStart="@dimen/m_10"
            android:layout_marginEnd="@dimen/m_10"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:minHeight="@dimen/action_bar_size"
            android:orientation="horizontal"

            >
            <androidx.appcompat.widget.AppCompatButton
                android:visibility="visible"
                android:id="@+id/btn_search_by_date"
                android:layout_marginStart="5dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingStart="@dimen/m_20"
                android:text="@string/date"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:drawableEnd="@drawable/ic_check_scaled"
                android:drawablePadding="@dimen/m_10"
                tools:ignore="RtlSymmetry" />
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/btn_search_by_date_2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@color/primary"

                tools:ignore="RtlSymmetry">
                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingStart="@dimen/m_20"
                    android:text="@string/aug_1_aug_31"
                    android:textColor="@color/white"
                    android:gravity="center_vertical"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    />
                <ImageButton
                    android:id="@+id/btn_remove_date"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:background="@color/primary"
                    android:src="@drawable/ic_circle_xmark"
                    android:importantForAccessibility="no" />
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatButton
                android:visibility="visible"
                android:id="@+id/btn_search_by_category"
                android:layout_marginStart="5dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingStart="@dimen/m_20"
                android:paddingEnd="@dimen/m_20"
                android:text="@string/category"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:drawableEnd="@drawable/ic_check_scaled"
                android:drawablePadding="@dimen/m_10"
                />
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/btn_search_by_category_2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:orientation="horizontal"
                android:background="@color/primary"
                tools:ignore="RtlSymmetry">
                <TextView
                    android:id="@+id/tv_categories_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingStart="@dimen/m_20"
                    android:text="@string/_1_category"
                    android:textColor="@color/white"
                    android:gravity="center_vertical"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    />
                <ImageButton
                    android:id="@+id/btn_remove_categories"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:background="@color/primary"
                    android:src="@drawable/ic_circle_xmark"
                    android:importantForAccessibility="no" />
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatButton
                android:visibility="visible"
                android:id="@+id/btn_search_by_wallet"
                android:layout_marginStart="5dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingStart="@dimen/m_20"
                android:text="@string/wallet"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:drawableEnd="@drawable/ic_check_scaled"
                android:drawablePadding="@dimen/m_10"
                tools:ignore="RtlSymmetry" />
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/btn_search_by_wallet_2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="@dimen/m_20"
                android:orientation="horizontal"
                android:background="@color/primary"
                tools:ignore="RtlSymmetry">
                <TextView
                    android:id="@+id/tv_wallets_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingStart="@dimen/m_20"
                    android:text="@string/_1_category"
                    android:textColor="@color/white"
                    android:gravity="center_vertical"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    />
                <ImageButton
                    android:id="@+id/btn_remove_wallet"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:background="@color/primary"
                    android:src="@drawable/ic_circle_xmark"
                    android:importantForAccessibility="no" />
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>
    <LinearLayout
        android:id="@+id/no_result"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="UseCompoundDrawables">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_no_result"
            android:importantForAccessibility="no" />
        <TextView
            android:id="@+id/tv_no_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/try_to_search_something"
            />
    </LinearLayout>
    <ScrollView
        android:visibility="gone"
        android:id="@+id/result_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/tv_result_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/m_20"
                android:text="@string/_1_transaction_found"
                android:textStyle="bold"
                />
            <ListView
                android:id="@+id/list_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                tools:ignore="NestedScrolling" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>