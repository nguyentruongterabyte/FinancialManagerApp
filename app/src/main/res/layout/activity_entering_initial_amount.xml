<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.EnteringInitialAmountActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:minHeight="@dimen/action_bar_size"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <TextView
            android:id="@+id/btn_skip"
            android:layout_width="wrap_content"
            android:minHeight="@dimen/action_bar_size"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:gravity="center"
            android:layout_marginEnd="@dimen/m_20"
            android:paddingStart="@dimen/m_10"
            android:paddingEnd="@dimen/m_10"
            android:text="@string/skip"
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:fontFamily="@font/akaya_telivigala"
            android:textSize="@dimen/description_text_size"
            android:background="@drawable/ripple_effect"
            />
    </androidx.appcompat.widget.Toolbar>
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/initial_amount"
        android:fontFamily="@font/akaya_telivigala"
        android:textSize="@dimen/title_text_size"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:text="@string/how_much_money_do_you_have_in_your_cash_wallet"
        android:fontFamily="@font/akaya_telivigala"
        android:textSize="18sp"/>
    <LinearLayout
        android:id="@+id/input_field"
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/description"
        android:layout_marginStart="@dimen/m_20"
        android:layout_marginEnd="@dimen/m_20"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_currency_symbol"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:text="@string/currency_symbol"
            android:textSize="22sp" />
        <TextView
            android:id="@+id/tv_initial_amount"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/amount"
            android:textSize="22sp"/>
        <ImageButton
            android:id="@+id/btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_delete_left"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:background="@drawable/ripple_effect"
            android:importantForAccessibility="no"
            />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/input_field"
        android:layout_marginStart="@dimen/m_20"
        android:layout_marginEnd="@dimen/m_20"
        android:background="@color/gray"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/number_one"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/number_button_height"
                android:background="@drawable/ripple_effect"
                android:text="@string/number_1"
                android:textSize="@dimen/number_size"
                android:fontFamily="@font/akaya_telivigala"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/number_two"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/number_button_height"
                android:background="@drawable/ripple_effect"
                android:text="@string/number_2"
                android:textSize="@dimen/number_size"
                android:fontFamily="@font/akaya_telivigala"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/number_three"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/number_button_height"
                android:background="@drawable/ripple_effect"
                android:text="@string/number_3"
                android:textSize="@dimen/number_size"
                android:fontFamily="@font/akaya_telivigala"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/number_four"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/number_button_height"
                android:background="@drawable/ripple_effect"
                android:text="@string/number_4"
                android:textSize="@dimen/number_size"
                android:fontFamily="@font/akaya_telivigala"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/number_five"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/number_button_height"
                android:background="@drawable/ripple_effect"
                android:text="@string/number_5"
                android:textSize="@dimen/number_size"
                android:fontFamily="@font/akaya_telivigala"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/number_six"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/number_button_height"
                android:background="@drawable/ripple_effect"
                android:text="@string/number_6"
                android:textSize="@dimen/number_size"
                android:fontFamily="@font/akaya_telivigala"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/number_seven"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/number_button_height"
                android:background="@drawable/ripple_effect"
                android:text="@string/number_7"
                android:textSize="@dimen/number_size"
                android:fontFamily="@font/akaya_telivigala"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/number_eight"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/number_button_height"
                android:background="@drawable/ripple_effect"
                android:text="@string/number_8"
                android:textSize="@dimen/number_size"
                android:fontFamily="@font/akaya_telivigala"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/number_nine"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/number_button_height"
                android:background="@drawable/ripple_effect"
                android:text="@string/number_9"
                android:textSize="@dimen/number_size"
                android:fontFamily="@font/akaya_telivigala"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/dot"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/number_button_height"
                android:background="@drawable/ripple_effect"
                android:text="@string/dot"
                android:textSize="@dimen/number_size"
                android:fontFamily="@font/akaya_telivigala"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/number_zero"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/number_button_height"
                android:background="@drawable/ripple_effect"
                android:text="@string/number_0"
                android:textSize="@dimen/number_size"
                android:fontFamily="@font/akaya_telivigala"
                />
                <ImageButton
                    android:id="@+id/finish_button"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/number_button_height"
                    android:background="@drawable/ripple_effect"
                    android:src="@drawable/ic_circle_check"
                    android:contentDescription="@string/finish_button"
                    />

        </LinearLayout>

    </LinearLayout>
    <com.airbnb.lottie.LottieAnimationView
        android:visibility="gone"
        android:id="@+id/animationView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:elevation="10dp"
        app:lottie_rawRes="@raw/loading" />

</androidx.constraintlayout.widget.ConstraintLayout>