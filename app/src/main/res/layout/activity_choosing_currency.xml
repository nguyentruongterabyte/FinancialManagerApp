<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.ChoosingCurrencyActivity">
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/m_20"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/select_currency"
        android:fontFamily="@font/akaya_telivigala"
        android:textSize="@dimen/title_text_size"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/m_20"
        android:layout_marginEnd="@dimen/m_20"
        android:gravity="center"
        android:text="@string/what_is_your_favourite_currency"
        android:fontFamily="@font/akaya_telivigala"
        android:textSize="@dimen/description_text_size"/>
    <TextView
        android:id="@+id/tv_selected_currency"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:layout_constraintTop_toBottomOf="@id/description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/m_20"
        android:layout_marginStart="@dimen/m_20"
        android:layout_marginEnd="@dimen/m_20"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingStart="@dimen/m_20"
        android:paddingEnd="@dimen/m_20"
        android:clickable="true"
        android:focusable="true"
        android:textSize="16sp"
        android:hint="@string/tap_here_to_select_currency"
        android:textColorHint="#676767"
        />
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_selected_currency"
        android:layout_marginStart="@dimen/m_20"
        android:layout_marginEnd="@dimen/m_20"
        android:background="@color/gray"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/primary_button"
        android:layout_marginTop="@dimen/m_20"
        android:layout_marginStart="@dimen/m_20"
        android:layout_marginEnd="@dimen/m_20"
        android:text="@string/next"
        android:textSize="@dimen/button_text_size"
        android:textColor="@color/white"
        android:fontFamily="@font/akaya_telivigala"
        android:enabled="false"
        />



</androidx.constraintlayout.widget.ConstraintLayout>